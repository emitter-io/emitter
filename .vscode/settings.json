{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        ".gitignore": true,
        "vendor/": true,
        ".vscode": true,
        "build*": true,
        "LICENSE": true,
        "appveyor.yml": true
    },
    
    "go.formatTool": "gofmt",
    "go.formatFlags": [
        "-s"
    ],
    "go.coverOnSave": true,
    "go.coverageOptions":"showUncoveredCodeOnly"
}